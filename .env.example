NODE_ENV=development

# Gateway
GATEWAY_PORT=3000
AUTH_SERVICE_URL=http://localhost:3001
ALLOWED_ORIGINS=http://localhost:5173,http://localhost:3000

# Auth-service
PORT=3001
AUTH_DATABASE_URL=postgres://hyperstack:hyperstack@localhost:5432/hyperstack_auth

# Redis
REDIS_HOST=127.0.0.1
REDIS_PORT=6379

# JWT
JWT_ACCESS_TTL=15m
JWT_REFRESH_TTL=7d
JWT_REFRESH_SLIDING_THRESHOLD=0%
JWT_PRIVATE_KEY_FILE=keys/private.pem
JWT_PUBLIC_KEY_FILE=keys/public.pem
JWT_ISS=https://auth.hyperstack.local
JWT_AUD=hyperstack-api
JWT_KID=dev-key-1

# OTEL
OTEL_EXPORTER_OTLP_ENDPOINT=http://localhost:4318
OTEL_SERVICE_NAME=dev-stack
OTEL_TRACES_SAMPLER=parentbased_traceidratio
OTEL_TRACES_SAMPLER_ARG=1.0
