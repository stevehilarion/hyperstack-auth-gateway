{
  "name": "@hyperstack/auth-service",
  "version": "0.0.1",
  "private": true,
  "nx": {
    "name": "auth-service",
    "targets": {
      "build": {
        "executor": "nx:run-commands",
        "options": {
          "command": "webpack-cli build",
          "args": [
            "--node-env=production"
          ],
          "cwd": "apps/auth-service"
        },
        "configurations": {
          "development": {
            "args": [
              "--node-env=development"
            ]
          }
        }
      },
      "prune-lockfile": {
        "dependsOn": [
          "build"
        ],
        "cache": true,
        "executor": "@nx/js:prune-lockfile",
        "outputs": [
          "{workspaceRoot}/apps/auth-service/dist/package.json",
          "{workspaceRoot}/apps/auth-service/dist/pnpm-lock.yaml"
        ],
        "options": {
          "buildTarget": "build"
        }
      },
      "copy-workspace-modules": {
        "dependsOn": [
          "build"
        ],
        "cache": true,
        "outputs": [
          "{workspaceRoot}/apps/auth-service/dist/workspace_modules"
        ],
        "executor": "@nx/js:copy-workspace-modules",
        "options": {
          "buildTarget": "build"
        }
      },
      "prune": {
        "dependsOn": [
          "prune-lockfile",
          "copy-workspace-modules"
        ],
        "executor": "nx:noop"
      },
      "serve": {
        "continuous": true,
        "executor": "@nx/js:node",
        "defaultConfiguration": "development",
        "dependsOn": [
          "build"
        ],
        "options": {
          "buildTarget": "auth-service:build",
          "runBuildTargetDependencies": false
        },
        "configurations": {
          "development": {
            "buildTarget": "auth-service:build:development"
          },
          "production": {
            "buildTarget": "auth-service:build:production"
          }
        }
      },
      "test": {
        "options": {
          "passWithNoTests": true
        }
      }
    }
  },
  "scripts": {
    "dc:up:mini": "bash -lc 'cd ../../ && docker compose up -d postgres redis'",
    "dc:up:obs": "bash -lc 'cd ../../ && docker compose up -d otel-collector jaeger prometheus'",
    "dc:up:all": "bash -lc 'cd ../../ && docker compose up -d postgres redis otel-collector jaeger prometheus'",
    "dc:down": "bash -lc 'cd ../../ && docker compose down'",
    "dc:ps": "bash -lc 'cd ../../ && docker compose ps'",
    "dc:logs": "bash -lc 'cd ../../ && docker compose logs -f --tail=100 otel-collector jaeger prometheus postgres redis'",

    "prisma:generate": "prisma generate --schema=./prisma/schema.prisma",
    "prisma:migrate": "prisma migrate dev --schema=./prisma/schema.prisma",
    "prisma:studio": "prisma studio --schema=./prisma/schema.prisma",
    "db:push": "prisma db push --schema=./prisma/schema.prisma",

    "build": "pnpm -w nx build auth-service",
    "serve": "pnpm -w nx serve auth-service",

    "dev:mini": "pnpm dc:up:mini && pnpm serve",
    "dev:obs": "pnpm dc:up:mini && pnpm dc:up:obs && pnpm serve",

    "health": "bash -lc 'curl -sS http://localhost:3001/auth/health || true'"
  },
  "dependencies": {
    "@nestjs/common": "^11.0.0",
    "@nestjs/core": "^11.0.0",
    "@nestjs/platform-express": "^11.0.0",
    "@prisma/client": "^6.18.0",
    "bcryptjs": "^3.0.2",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.2",
    "glob": "^11.0.3",
    "helmet": "^8.1.0",
    "ioredis": "^5.8.2",
    "jsonwebtoken": "^9.0.2",
    "ms": "^2.1.3",
    "reflect-metadata": "^0.1.13",
    "rsa-pem-to-jwk": "^1.1.3",
    "rxjs": "^7.8.0",
    "tslib": "^2.3.0"
  },
  "devDependencies": {
    "@nestjs/testing": "^11.0.0",
    "@types/bcrypt": "^6.0.0",
    "@types/bcryptjs": "^3.0.0",
    "@types/jsonwebtoken": "^9.0.10",
    "copy-webpack-plugin": "^13.0.1",
    "prisma": "^6.18.0"
  }
}
