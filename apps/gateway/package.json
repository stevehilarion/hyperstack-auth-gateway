{
  "name": "@hyperstack/gateway",
  "version": "0.0.1",
  "private": true,
  "nx": {
    "name": "gateway",
    "targets": {
      "build": {
        "executor": "nx:run-commands",
        "options": {
          "command": "pnpm exec tsc -p apps/gateway/tsconfig.app.json"
        },
        "configurations": {
          "development": {
            "command": "pnpm exec tsc -p apps/gateway/tsconfig.app.json --sourceMap"
          },
          "production": {
            "command": "pnpm exec tsc -p apps/gateway/tsconfig.app.json"
          }
        },
        "defaultConfiguration": "production"
      },
      "serve": {
        "executor": "nx:run-commands",
        "dependsOn": ["build"],
        "options": {
          "command": "node apps/gateway/dist/main.js"
        },
        "configurations": {
          "development": {
            "command": "node --enable-source-maps apps/gateway/dist/main.js"
          },
          "production": {
            "command": "node apps/gateway/dist/main.js"
          }
        },
        "defaultConfiguration": "development"
      },
      "typecheck": {
        "executor": "nx:run-commands",
        "options": {
          "command": "pnpm exec tsc --project apps/gateway/tsconfig.app.json --noEmit"
        }
      },
      "test": {
        "options": { "passWithNoTests": true }
      }
    }
  },
  "scripts": {
    "build": "pnpm -w nx build gateway",
    "serve": "pnpm -w nx serve gateway"
  },
  "dependencies": {
    "@opentelemetry/api": "^1.9.0",
    "@opentelemetry/auto-instrumentations-node": "^0.52.1",
    "@opentelemetry/exporter-trace-otlp-http": "^0.52.1",
    "@opentelemetry/resources": "^1.9.0",
    "@opentelemetry/sdk-node": "^0.52.1",
    "@opentelemetry/semantic-conventions": "^1.9.0",
    "helmet": "^8.1.0",
    "jose": "^6.1.0",
    "prom-client": "^15.1.3",
    "reflect-metadata": "^0.1.13",
    "tslib": "^2.3.0"
  },
  "devDependencies": {
    "@types/express": "^5.0.5",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/ms": "^2.1.0"
  }
}
