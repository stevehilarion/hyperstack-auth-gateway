{
  "name": "@hyperstack/source",
  "version": "0.0.0",
  "license": "MIT",
  "scripts": {
    "lint": "nx run-many -t lint --all --parallel",
    "typecheck": "nx run-many -t typecheck --all --parallel || tsc -p tsconfig.base.json --noEmit",
    "test": "nx run-many -t test --all --parallel",
    "build": "nx run-many -t build --all --parallel",
    "ci": "pnpm -w lint && pnpm -w typecheck && pnpm -w test && pnpm -w build",
    "test:e2e": "jest -c apps-e2e/jest.config.js",
    "test:unit:auth": "jest -c apps/auth-service/jest.config.js --runInBand",
    "test:unit:gateway": "jest -c apps/gateway/jest.config.js --runInBand",
    "test:unit": "pnpm -w test:unit:auth && pnpm -w test:unit:gateway",
    "infra:up": "docker compose up -d postgres redis prometheus otel-collector jaeger",
    "infra:down": "docker compose down",
    "infra:logs": "docker compose logs -f --tail=100",
    "keys:ensure": "node -e \"const fs=require('fs');fs.mkdirSync('keys',{recursive:true});if(!fs.existsSync('keys/private.pem')){console.log('gen private');require('child_process').execSync('openssl genrsa -out keys/private.pem 2048')}if(!fs.existsSync('keys/public.pem')){console.log('gen public');require('child_process').execSync('openssl rsa -in keys/private.pem -pubout -out keys/public.pem')}console.log('keys ok')\"",
    "prisma:generate": "pnpm --filter @hyperstack/auth-service prisma:generate",
    "prisma:migrate:deploy": "pnpm --filter @hyperstack/auth-service prisma migrate deploy --schema=./prisma/schema.prisma",
    "dev:prep": "pnpm keys:ensure && pnpm prisma:generate && pnpm prisma:migrate:deploy",
    "dev:infra": "pnpm infra:up && pnpm infra:logs",
    "dev:services": "pnpm -w nx run-many -t serve --all --configuration=development",
    "dev": "pnpm dev:prep && pnpm dev:services"
  },
  "private": true,
  "dependencies": {
    "@nestjs/common": "^11.0.0",
    "@nestjs/core": "^11.0.0",
    "@nestjs/platform-express": "^11.0.0",
    "@nestjs/throttler": "^6.4.0",
    "@opentelemetry/api": "1.9.0",
    "@opentelemetry/auto-instrumentations-node": "0.52.1",
    "@opentelemetry/exporter-trace-otlp-http": "0.52.1",
    "@opentelemetry/resources": "1.9.0",
    "@opentelemetry/sdk-node": "0.52.1",
    "@opentelemetry/semantic-conventions": "1.9.0",
    "axios": "^1.6.0",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.2",
    "dotenv": "^17.2.3",
    "express": "^5.1.0",
    "jsonwebtoken": "^9.0.2",
    "jwk-to-pem": "^2.0.7",
    "reflect-metadata": "^0.1.14",
    "rsa-pem-to-jwk": "^1.1.3",
    "rxjs": "^7.8.0",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@eslint/js": "^9.8.0",
    "@nestjs/schematics": "^11.0.0",
    "@nestjs/testing": "^11.0.0",
    "@nx/eslint": "22.0.1",
    "@nx/eslint-plugin": "22.0.1",
    "@nx/jest": "22.0.1",
    "@nx/js": "22.0.1",
    "@nx/nest": "22.0.1",
    "@nx/node": "22.0.1",
    "@nx/web": "22.0.1",
    "@nx/webpack": "22.0.1",
    "@swc-node/register": "~1.9.1",
    "@swc/core": "~1.5.7",
    "@swc/helpers": "~0.5.11",
    "@swc/jest": "~0.2.38",
    "@types/jest": "^30.0.0",
    "@types/node": "20.19.9",
    "esbuild": "^0.25.12",
    "eslint": "^9.8.0",
    "eslint-config-prettier": "^10.0.0",
    "jest": "^30.0.2",
    "jest-environment-node": "^30.0.2",
    "jest-util": "^30.0.2",
    "nx": "22.0.1",
    "prettier": "^2.6.2",
    "prisma": "6.18.0",
    "ts-jest": "^29.4.0",
    "ts-node": "10.9.1",
    "tsconfig-paths": "^4.2.0",
    "tslib": "^2.3.0",
    "typescript": "~5.9.3",
    "typescript-eslint": "^8.40.0",
    "webpack": "^5.102.1",
    "webpack-cli": "^5.1.4"
  }
}
